<div class="all-brands-page">
  <div class="brands-hero">
    <div class="container">
      <h1 class="brands-title">Nos Marques</h1>
      <p class="brands-subtitle">Découvrez notre sélection de marques prestigieuses</p>
    </div>
  </div>

  <div class="brands-content">
    <div class="container">
      <div class="brands-grid">
        <% @brands.each do |brand| %>
          <div class="brand-card">
            <%= link_to vitrine_brand_show_path(brand), class: "brand-link" do %>
              <div class="brand-image-container">
                <% if brand.image.present? %>
                  <%= image_tag brand.image, alt: brand.name, class: "brand-image" %>
                <% else %>
                  <div class="brand-placeholder">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                      <circle cx="8.5" cy="8.5" r="1.5"/>
                      <polyline points="21,15 16,10 5,21"/>
                    </svg>
                  </div>
                <% end %>
              </div>
              <div class="brand-info">
                <h3 class="brand-name"><%= brand.name %></h3>
                <% if brand.description.present? %>
                  <p class="brand-description"><%= truncate(brand.description, length: 100) %></p>
                <% end %>
                <div class="brand-stats">
                  <span class="parfums-count">
                    <%= pluralize(brand.parfums.count, 'parfum') %>
                  </span>
                </div>
              </div>
              <div class="brand-overlay">
                <span class="view-brand-text">Voir les parfums</span>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="m9 18 6-6-6-6"/>
                </svg>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <% if @brands.empty? %>
        <div class="no-brands">
          <div class="no-brands-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="m9 9 6 6"/>
              <path d="m15 9-6 6"/>
            </svg>
          </div>
          <h3>Aucune marque disponible</h3>
          <p>Nous travaillons à enrichir notre catalogue de marques prestigieuses.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
