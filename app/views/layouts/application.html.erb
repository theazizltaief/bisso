<!DOCTYPE html>
<html lang="fr">
  <head>
    <title><%= content_for(:title) || "Bisso Fragrance Admin" %></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="turbo-cache-control" content="no-cache">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- CSS -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
          crossorigin="anonymous">
    <link rel="stylesheet" 
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
          crossorigin="anonymous" 
          referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" 
          rel="stylesheet">

    <!-- JavaScript via Importmap -->
    <%= javascript_importmap_tags %>

    <%= yield :head %>

    <style>
      :root {
        --sidebar-width: 250px;
        --sidebar-bg: linear-gradient(135deg, #1f1c2c, #928dab);
      }

      body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fa;
        overflow-x: hidden;
      }

      .sidebar {
        background: var(--sidebar-bg);
        color: white;
        min-height: 100vh;
        width: var(--sidebar-width);
        position: fixed;
        z-index: 1050;
        transition: transform 0.3s ease;
      }

      .sidebar a {
        color: rgba(255, 255, 255, 0.9);
        padding: 10px 20px;
        display: block;
        border-radius: 8px;
        transition: all 0.2s;
        text-decoration: none;
      }

      .sidebar a:hover, 
      .sidebar a.active {
        background-color: rgba(255, 255, 255, 0.15);
        color: #fff;
      }

      .main-content {
        margin-left: var(--sidebar-width);
        width: calc(100% - var(--sidebar-width));
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      @media (max-width: 768px) {
        .sidebar {
          transform: translateX(calc(-1 * var(--sidebar-width)));
        }
        .sidebar.show {
          transform: translateX(0);
        }
        .main-content {
          margin-left: 0;
          width: 100%;
        }
      }

      .card-product {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
      }

      .card-product:hover {
        transform: translateY(-5px);
        box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
      }

      #flash {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1100;
        min-width: 300px;
      }
    </style>
  </head>

  <body>
    <div class="d-flex">
      <!-- Sidebar -->
      <aside id="sidebar" class="sidebar shadow-sm">
        <div class="text-center py-4 border-bottom border-white border-opacity-25">
          <h4>Bisso Fragrance</h4>
          <small>Admin Panel</small>
        </div>
          <nav class="p-3">
            <%= link_to admin_panel_root_path, class: "nav-link #{'active' if current_page?(admin_panel_root_path)}" do %>
                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
              <% end %>
            
              <%= link_to admin_panel_parfums_path, class: "nav-link #{'active' if current_page?(admin_panel_parfums_path)}" do %>
                <i class="fas fa-box-open me-2"></i> Parfums
              <% end %>
                <%= link_to admin_panel_brands_path, class: "nav-link #{'active' if current_page?(admin_panel_brands_path)}" do %>
                  <i class="fas fa-tags me-2"></i> Marques
                <% end %>


            <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-danger mt-4" do %>
              <i class="fas fa-sign-out-alt me-2"></i> Déconnexion
            <% end %>
          </nav>
      </aside>

      <!-- Main content -->
      <div class="main-content">
        <!-- Header -->
        <header class="bg-white border-bottom px-4 py-3 d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <button class="btn btn-outline-secondary d-md-none me-3" id="sidebarToggle">
              <i class="fas fa-bars"></i>
            </button>
            <h1 class="h5 mb-0"><%= content_for(:page_title) || "Tableau de bord" %></h1>
          </div>
          <span class="text-muted small">Admin connecté</span>
        </header>

        <!-- Main -->
        <main class="flex-grow-1 px-4 py-4">
          <div id="flash">
            <%= render "shared/flash" %>
          </div>
          
          <%= yield %>

          <!-- Section optionnelle -->
          <% if content_for?(:cards) %>
            <div class="row mt-4">
              <%= yield :cards %>
            </div>
          <% end %>
        </main>

        <!-- Footer -->
        <footer class="bg-white border-top text-center py-3 text-muted small">
          &copy; <%= Time.current.year %> Bisso Fragrance — Interface admin
        </footer>
      </div>
    </div>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script>
      document.addEventListener('turbo:load', function() {
        // Gestion de la sidebar
        const sidebar = document.getElementById('sidebar');
        const sidebarToggle = document.getElementById('sidebarToggle');
        
        if (sidebarToggle) {
          sidebarToggle.addEventListener('click', function() {
            sidebar.classList.toggle('show');
          });
        }

        // Initialisation des tooltips Bootstrap
        if (typeof bootstrap !== 'undefined') {
          const tooltips = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
          tooltips.forEach(tooltip => new bootstrap.Tooltip(tooltip));
        }

        // Fermeture automatique des flash messages
        const flashMessages = document.querySelectorAll('#flash .alert');
        flashMessages.forEach(flash => {
          setTimeout(() => {
            flash.style.transition = 'opacity 0.5s';
            flash.style.opacity = '0';
            setTimeout(() => flash.remove(), 500);
          }, 5000);
        });
      });
    </script>
  </body>
</html>