<%= form_with model: [:admin_panel, parfum], local: true do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :prix %><br>
    <%= f.number_field :prix, step: 0.01 %>
  </div>

  <div>
    <%= f.label :brand_id, "Marque" %><br>
    <%= f.collection_select :brand_id, @brands, :id, :name, prompt: "SÃ©lectionner une marque" %>
  </div>

  <div>
    <%= f.submit %>
  </div>

  <% if @brands.empty? %>
    <p>
      Vous ne trouvez pas votre marque ?
      <%= link_to "Ajouter une nouvelle marque", new_admin_panel_brand_path(redirect_to: request.fullpath) %>
    </p>
  <% else %>
    <p>
      Vous ne trouvez pas votre marque ?
      <%= link_to "Ajouter une nouvelle marque", new_admin_panel_brand_path %>
    </p>
  <% end %>
<% end %> <!-- Fermeture du form_with -->
