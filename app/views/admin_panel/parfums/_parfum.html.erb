<div id="<%= dom_id parfum %>" class="col-md-4">
  <div class="card mb-4">
    <% if parfum.image.attached? %>
      <%= image_tag parfum.image.variant(resize_to_limit: [300, 300]), class: "card-img-top" %>
    <% else %>
      <div class="card-img-top text-center p-4 text-muted">Pas encore d'image</div>
    <% end %>

    <div class="card-body">
      <h5 class="card-title"><%= parfum.name %></h5>

      <%= link_to "Voir", admin_panel_parfum_path(parfum), class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Modifier", edit_admin_panel_parfum_path(parfum), class: "btn btn-sm btn-outline-secondary" %>
 
    </div>
  </div>
</div>