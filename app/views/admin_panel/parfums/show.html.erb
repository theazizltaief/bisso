<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title display-5 mb-4"><%= @parfum.name %></h1>
      
      <div class="row">
        <div class="col-md-6">
          <% if @parfum.image.attached? %>
            <div class="mb-4">
              <%= image_tag @parfum.image.variant(resize_to_limit: [400, 400]), 
                  class: "img-fluid rounded shadow" %>
              <p class="text-muted mt-2">Image déjà importée</p>
            </div>
          <% end %>
        </div>
        
        <div class="col-md-6">
          <div class="mb-3">
            <h5 class="text-muted mb-1">Marque</h5>
            <p class="fs-5"><%= @parfum.brand.name %></p>
          </div>
          
          <div class="mb-3">
            <h5 class="text-muted mb-1">Prix</h5>
            <p class="fs-5"><%= number_to_currency(@parfum.prix, unit: "Dt") %></p>
          </div>
          
        <div class="mb-3">
          <h5 class="text-muted mb-1">Catégorie</h5>
          <p class="fs-5">
            <%= t("activerecord.enums.parfum.category.#{@parfum.category}") %>
          </p>
        </div>

        <div class="mb-3">
          <h5 class="text-muted mb-1">Type</h5>
          <p class="fs-5">
            <%= t("activerecord.enums.parfum.fragrance_class.#{@parfum.fragrance_class}") %>
          </p>
        </div>






          
          <div class="mb-4">
            <h5 class="text-muted mb-1">Description</h5>
            <p class="fs-5"><%= @parfum.description %></p>
          </div>
        </div>
      </div>
      
      <div class="d-flex gap-2 mt-4">
        <%= link_to "Modifier", edit_admin_panel_parfum_path(@parfum),
            class: "btn btn-outline-primary btn-sm px-4 py-2 rounded-pill" %>
        
      <%= button_to "Supprimer", admin_panel_parfum_path(@parfum),
          method: :delete,
          form: { 
            class: "d-inline",
            "data-controller": "confirm",
            "data-action": "submit->confirm#confirm",
            "data-turbo-frame": "_top"
          },
          class: "btn btn-outline-danger btn-sm px-4 py-2 rounded-pill" %>

        
        <%= link_to "Retour à la liste", admin_panel_parfums_path,
            class: "btn btn-outline-secondary btn-sm px-4 py-2 rounded-pill ms-auto" %>
      </div>
    </div>
  </div>
</div>

