<%= form_with model: [:admin_panel, brand], local: true, html: { multipart: true } do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Nom de la marque" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :image, "Importer une image" %><br>
    <%= f.file_field :image, class: "form-control" %>

  <% if brand.image.attached? %>
    <div class="mt-2">
      <p>Image actuelle :</p>
      <%= image_tag brand.image.variant(resize_to_limit: [100, 100]) if brand.image.variable? %>
      <div class="form-check mt-2">
        <%= f.check_box :remove_image, {}, '1', '0', class: "form-check-input" %>
        <%= f.label :remove_image, "Supprimer lâ€™image", class: "form-check-label" %>
      </div>
    </div>
  <% end %>


  <div class="mb-3">
    <%= f.submit "Enregistrer", class: "btn btn-primary" %>
  </div>

  <% if Brand.exists? %>
    <p>Nombre de marques disponibles : <%= Brand.count %></p>
  <% end %>

  <p>
    Vous ne trouvez pas votre marque ?
    <%= link_to "Ajouter une nouvelle marque", new_admin_panel_brand_path(redirect_to: request.fullpath) %>
  </p>
<% end %>
